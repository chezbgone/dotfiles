set $mod Mod1

font pango: Source Code Pro 9

focus_follows_mouse no
mouse_warping none

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# floating mode
bindsym $mod+Shift+Left move left 50 px
bindsym $mod+Shift+Down move down 50 px
bindsym $mod+Shift+Up move up 50 px
bindsym $mod+Shift+Right move right 50 px

bindsym $mod+backslash split h
bindsym $mod+minus split v

set $bg-color 	           #223020
set $border-color 	       #d08020
set $inactive-bg-color     #202020
set $inactive-border-color #8E8E8E
set $text-color            #ffffff
set $inactive-text-color   #8E8E8E
set $urgent-bg-color       #E53935

# window colors         border             background         text                 indicator  child-border
client.focused          $border-color      $bg-color          $text-color          #00ff00    $border-color
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00    $inactive-border-color
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00    $inactive-border-color
client.urgent           $urgent-bg-color   $urgent-bg-color   $text-color          #00ff00    #00ff00

bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
floating_modifier $mod

bindsym $mod+p sticky toggle

bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

bindsym $mod+Return exec termite
bindsym $mod+Shift+Return exec termite --class floating_term
bindsym $mod+Shift+q kill
bindsym $mod+d exec rofi -show run

bindsym $mod+Tab workspace back_and_forth

bindsym $mod+1 workspace 1, move workspace to output primary
bindsym $mod+2 workspace 2, move workspace to output primary
bindsym $mod+3 workspace 3, move workspace to output primary
bindsym $mod+4 workspace 4, move workspace to output primary
bindsym $mod+5 workspace 5, move workspace to output primary
bindsym $mod+6 workspace 6, move workspace to output primary
bindsym $mod+7 workspace 7, move workspace to output primary
bindsym $mod+8 workspace 8, move workspace to output primary
bindsym $mod+9 workspace 9, move workspace to output primary
bindsym $mod+0 workspace 10, move workspace to output primary

bindsym $mod+Shift+1 move container to workspace 1, workspace 1, move workspace to output primary
bindsym $mod+Shift+2 move container to workspace 2, workspace 2, move workspace to output primary
bindsym $mod+Shift+3 move container to workspace 3, workspace 3, move workspace to output primary
bindsym $mod+Shift+4 move container to workspace 4, workspace 4, move workspace to output primary
bindsym $mod+Shift+5 move container to workspace 5, workspace 5, move workspace to output primary
bindsym $mod+Shift+6 move container to workspace 6, workspace 6, move workspace to output primary
bindsym $mod+Shift+7 move container to workspace 7, workspace 7, move workspace to output primary
bindsym $mod+Shift+8 move container to workspace 8, workspace 8, move workspace to output primary
bindsym $mod+Shift+9 move container to workspace 9, workspace 9, move workspace to output primary
bindsym $mod+Shift+0 move container to workspace 10, workspace 10, move workspace to output primary

bindsym Mod4+1 workspace 1', move workspace to output HDMI2
bindsym Mod4+2 workspace 2', move workspace to output HDMI2
bindsym Mod4+3 workspace 3', move workspace to output HDMI2
bindsym Mod4+4 workspace 4', move workspace to output HDMI2
bindsym Mod4+5 workspace 5', move workspace to output HDMI2
bindsym Mod4+6 workspace 6', move workspace to output HDMI2
bindsym Mod4+7 workspace 7', move workspace to output HDMI2
bindsym Mod4+8 workspace 8', move workspace to output HDMI2
bindsym Mod4+9 workspace 9', move workspace to output HDMI2
bindsym Mod4+0 workspace 10', move workspace to output HDMI2

bindsym Mod4+Shift+1 move container to workspace 1', workspace 1', move workspace to output HDMI2
bindsym Mod4+Shift+2 move container to workspace 2', workspace 2', move workspace to output HDMI2
bindsym Mod4+Shift+3 move container to workspace 3', workspace 3', move workspace to output HDMI2
bindsym Mod4+Shift+4 move container to workspace 4', workspace 4', move workspace to output HDMI2
bindsym Mod4+Shift+5 move container to workspace 5', workspace 5', move workspace to output HDMI2
bindsym Mod4+Shift+6 move container to workspace 6', workspace 6', move workspace to output HDMI2
bindsym Mod4+Shift+7 move container to workspace 7', workspace 7', move workspace to output HDMI2
bindsym Mod4+Shift+8 move container to workspace 8', workspace 8', move workspace to output HDMI2
bindsym Mod4+Shift+9 move container to workspace 9', workspace 9', move workspace to output HDMI2
bindsym Mod4+Shift+0 move container to workspace 10', workspace 10', move workspace to output HDMI2

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r exec killall -USR1 py3status
bindsym $mod+Control+Shift+r restart
bindsym $mod+Shift+b exec --no-startup-id "source ~/.fehbg"

bindsym $mod+y resize shrink width 5 px or 2 ppt
bindsym $mod+u resize grow height 5 px or 2 ppt
bindsym $mod+i resize shrink height 5 px or 2 ppt
bindsym $mod+o resize grow width 5 px or 2 ppt
bindsym $mod+Shift+y resize shrink width 25 px or 10 ppt
bindsym $mod+Shift+u resize grow height 25 px or 10 ppt
bindsym $mod+Shift+i resize shrink height 25 or 10 ppt
bindsym $mod+Shift+o resize grow width 25 px or 10 ppt

# scratchpad
bindsym $mod+c move scratchpad
bindsym $mod+v scratchpad show

# startup
exec --no-startup-id redshift-gtk -l 42:-71
exec --no-startup-id libinput-gestures-setup start
exec --no-startup-id dunst
exec --no-startup-id dropbox start
exec --no-startup-id blueman-applet
exec --no-startup-id xfce4-clipman

bar {
	position top
	tray_output primary
	status_command py3status
	height 16
}

gaps inner 5
for_window [class="^.*"] border pixel 2

smart_gaps on
smart_borders on

for_window [class="feh"] floating enable
for_window [class="mpv"] floating enable
for_window [class="tridactyl_editor"] floating enable
for_window [class="floating_term"] floating enable
for_window [class="asymptote"] floating enable
