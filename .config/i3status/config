order += "window_title_async"
order += "spotify"
order += "backlight"
order += "volume_status"
order += "sysdata"
order += "battery_level"
order += "wifi"
# order += "online_status"
order += "clock"

battery_level{
	battery_id = "all"
	format = "{percent}% {time_remaining}"
}

clock{
	format_time = "%a %m/%d %H:%M:%S"
}

spotify{
	cache_timeout = 1
	button_play_pause = 2
	button_previous = 1
	button_next = 3
	format_down = "Spotify down"
}

sysdata{
	cache_timeout = 5
	format = "[\?color=cpu CPU: {cpu_usage}%] [\?color=mem Mem: {mem_used_percent}%]"
}

volume_status{
	cache_timeout = 3
	command = "pactl"
	volume_delta = 2
}

wifi{
	format = "W:{ssid} {bitrate} {signal_percent}|W: down"
}

window_title_async{
	always_show = True
}
