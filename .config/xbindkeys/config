# Increase volume
"amixer -q sset Master 2%+ unmute & py3-cmd refresh volume_status"
   XF86AudioRaiseVolume

"amixer -q sset Master 10%+ unmute & py3-cmd refresh volume_status"
   Shift+XF86AudioRaiseVolume

# Decrease volume
"amixer -q sset Master 2%- unmute & py3-cmd refresh volume_status"
   XF86AudioLowerVolume

"amixer -q sset Master 10%- unmute & py3-cmd refresh volume_status"
   Shift+XF86AudioLowerVolume

# Mute volume
"amixer -q sset Master toggle & py3-cmd refresh volume_status"
   XF86AudioMute


# Increase backlight
"xbacklight -inc 1 & py3-cmd refresh backlight"
   XF86MonBrightnessUp

"xbacklight -inc 5 & py3-cmd refresh backlight"
   Shift+XF86MonBrightnessUp

# Decrease backlight
"xbacklight -dec 1 & py3-cmd refresh backlight"
   XF86MonBrightnessDown

"xbacklight -dec 5 & py3-cmd refresh backlight"
   Shift+XF86MonBrightnessDown


# Screenshot
"maim --select --hidecursor --highlight --color=0,0.35,0.5,0.15 | xclip -selection clipboard -target image/png"
	Print

# Screenshot with menu
"xfce4-screenshooter -r"
	Mod4+Print

# Screenshot and upload
"export NAME="$(uuidgen).png" ; maim --select --hidecursor --highlight -c 0,0.35,0.5,0.15 /tmp/screenshot-$NAME && aws s3 cp /tmp/screenshot-$NAME s3://jasonchen.dev/screenshots/$NAME --cache-control 'max-age=600' && echo "https://jasonchen.dev/screenshots/$NAME" | xclip -selection clipboard && notify-send --expire-time=1000 "uploaded to jasonchen.dev""
	Control+Print

# Screenshot with delay
"maim --delay=2 --select --hidecursor --highlight --color=0,0.35,0.5,0.15 | xclip -selection clipboard -target image/png && notify-send --expire-time=1000 "copied to clipboard""
	Shift+Print

# Screenshot with delay and upload
"export NAME="$(uuidgen).png" ; maim --delay=2 --select --hidecursor --highlight -c 0,0.35,0.5,0.15 /tmp/screenshot-$NAME && aws s3 cp /tmp/screenshot-$NAME s3://jasonchen.dev/screenshots/$NAME --cache-control 'max-age=600' && echo "https://jasonchen.dev/screenshots/$NAME" | xclip -selection clipboard ; notify-send --expire-time=1000 "uploaded to jasonchen.dev""
	Control+Shift+Print


