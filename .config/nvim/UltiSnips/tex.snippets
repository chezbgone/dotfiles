endsnippet

snippet "(cases)::" "standard math environments" rA
\begin{`!p snip.rv = match.group(1)`}
	${1:<++>}
\end{`!p snip.rv = match.group(1)`}
${0:<++>}
endsnippet

snippet "(center|asy)::" "standard text environments" rA
\begin{`!p snip.rv = match.group(1)`}
	${1:<++>}
